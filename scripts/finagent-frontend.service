[Unit]
Description=FinAgent Frontend (Streamlit)
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/path/to/finagent
Environment="PATH=/path/to/finagent/venv/bin"
Environment="PYTHONPATH=/path/to/finagent"
ExecStart=/path/to/finagent/venv/bin/streamlit run src/agents/cross_border_finance/frontend.py --server.port 8501 --server.address 0.0.0.0
Restart=always

[Install]
WantedBy=multi-user.target
